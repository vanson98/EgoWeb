@using Microsoft.AspNetCore.Mvc.Localization
@using System.Threading;
@using TLS.Web.Resources
@inject LocalizationService LocalizationService
@inject IViewLocalizer ViewLocalizer

<section class="footer max-width" id="app-footer">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-12">
            @if(Thread.CurrentThread.CurrentCulture.Name == "vi")
            {
                <div>
                    Đừng ngần ngại <br> kết nối với chúng tôi <br> để nhận tư vấn 
                </div>
            }
            else
            {
                <div class="h2">
                    you feel 
                    <br />
                    <span class="primary-color"> interested </span>
                </div>
            }
            
        </div>
        <div class="col-lg-6 col-md-12 col-12">
            <div class="right-footer">
                <div class="row align-items-center">
                    <div class="col-4">
                        <div class="title">Reach us</div>
                        <div><a href="https://www.facebook.com/egoagency.vn">Facebook</a></div>
                        <div><a href="https://www.behance.net/agencyego">Behance</a></div>
                    </div>
                    <div class="col-4">
                        <div class="title">Meet us</div>
                        <div>@ViewLocalizer["ft3"]</div>
                        <div>@ViewLocalizer["ft4"]</div>
                    </div>
                    <div class="col-4">
                        <a href="/contact" class="link-redirect">
                            <img src="~/EgoImages/arrow.png" alt="" />
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>