@using Microsoft.AspNetCore.Mvc.Localization
@using TLS.ViewModels.News
@model NewsPageVm
@inject IViewLocalizer ViewLocalizer
@section Headers{
    <link href="~/css/blogs.css" rel="stylesheet" />
}
    <div class="blog-page max-width relative">
        <section class="header">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-12"></div>
                <div class="col-lg-8 col-md-12 col-12 relative">
                    <h1>@ViewLocalizer["blog1"]</h1>
                    <div class="scroll">
                        <img src="~/EgoImages/scroll.png" alt="" class="circle" />
                        <img src="~/EgoImages/arrow.png" alt="" class="absolute arrow" />
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="row">
                <div class="col-lg-4 col-md-12 col-12">
                </div>
                <div class="col-lg-7 col-md-12 col-12">
                @foreach (var item in Model.Items)
                {
                    <div class="article">
                        <div class="thumb">
                            <img src="@item.ThumbNailImageLink" alt="@item.ThumbNailImageTitle" />
                        </div>
                        <div class="title">@item.Title</div>
                        <div class="short-desc" style="color:grey">
                            @item.ShortDescription
                        </div>
                        <a href="@item.DetailLink">See more ></a>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-12 col-12"></div>
            <div class="col-lg-7 col-md-12 col-12">
                <nav aria-label="Page navigation">
                    @await Component.InvokeAsync("Pager",Model)
                </nav>
            </div>

        </div>

    </section>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
    <script>
        gsap.to(".scroll .circle", { rotation: 360, transformOrigin: "center", ease: "none", duration: 15, repeat: -1 });
    </script>
} 