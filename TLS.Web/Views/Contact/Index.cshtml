@section Headers{
    <link href="~/css/contact.css" rel="stylesheet" />
    <title>Contact - Ego</title>
}
<div class="contact-page">
    <section>
        <div class="max-width">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-12"></div>
                <div class="col-lg-7 col-md-12 col-12">
                    <div>Visit us at</div>
                    <div class="address">
                        2nd Floor, Helios A Town
                        <br />
                        75 Tam Trinh,Hoang Mai, HN
                        <br />
                        VietNam, 100000
                    </div>

                    <div>Stay connected with us</div>
                    <div class="address">
                        <div>hello@egocreative.co</div>
                        <div>0876 280 678</div>
                    </div>

                    <div>
                        <a href="#" class="link-redirect link-redirect-hide">
                            <img src="./EgoImages/arrow.png" alt="" />
                        </a>
                    </div>

                    <div class="form-mobile">
                        <div>or leave your contact information</div>
                        <br />
                        <form action="">
                            <label for="name">Name:</label>
                            <br />
                            <input type="text" id="name" name="name" />
                            <br />
                            <label for="phone">Phone:</label>
                            <br />
                            <input type="phone" id="phone" name="phone" />
                            <br />
                            <label for="business">Business areas:</label><br />
                            <input type="text" id="business" name="business" />
                            <br />
                            <br />
                            <div class="btn-submit">
                                <input type="submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="scrolling">
            <div class="text-animation">
                Thank you for searching
                <span class="primary-color">egocreative</span> . We will respond to
                every email sent to us
            </div>
        </div>
    </div>
</div>