@using Microsoft.AspNetCore.Mvc.Localization
@using TLS.Web.Resources
@inject LocalizationService LocalizationService
@inject IViewLocalizer ViewLocalizer

@section Headers{
    <link href="~/css/about.css" rel="stylesheet" />
    <title>@ViewLocalizer["Title"]</title>
}
   
    <div class="about-page">
        <section class="header"
                 data-aos="fade-up"
                 data-aos-duration="1400"
                 data-aos-easing="linear"
        >
            <div class="row max-width">
                <div class="col-lg-4 col-md-12 col-12"></div>
                <div class="col-lg-8 col-md-12 col-12">
                    <h1>
                        @ViewLocalizer["about1"] <span class="primary-color">@ViewLocalizer["about2"]</span>
                        @ViewLocalizer["about3"]
                    </h1>
                </div>
            </div>
        </section>

        <section
             data-aos="fade-up"
             data-aos-duration="1800"
             data-aos-easing="linear"
        >
            <div class="row max-width">
                <div class="col-lg-4 col-md-12 col-12"></div>
                <div class="col-lg-8 col-md-12 col-12">
                    <div class="title">@ViewLocalizer["about4"]</div>
                    <div class="desc">
                        @ViewLocalizer["about5"]
                        
                    </div>
                </div>
            </div>
        </section>

        <section data-aos="fade-up"
             data-aos-duration="2000"
             data-aos-easing="linear">
            <img src="./EgoImages/about/banner.png" alt="" />
        </section>

        <section
             data-aos="fade-up"
             data-aos-duration="1800"
             data-aos-easing="linear"
        >
            <div class="row max-width">
                <div class="col-lg-4 col-md-12 col-12"></div>
                <div class="col-lg-8 col-md-12 col-12">
                    <div class="title">@ViewLocalizer["about6"]</div>
                    <div class="desc">
                        @ViewLocalizer["about7"]
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="row max-width">
                <div class="col-4"></div>
                <div class="col-8">
                    <div class="box"
                         data-aos="fade-up"
                         data-aos-duration="1200"
                         data-aos-easing="linear"
                    >
                        <div class="number">01</div>
                        <div class="name">@ViewLocalizer["about8"]</div>
                        <div class="desc-box">
                            @ViewLocalizer["about9"]
                            
                        </div>
                    </div>

                    <div class="box"
                         data-aos="fade-up"
                         data-aos-duration="1400"
                         data-aos-easing="linear"
                    >
                        <div class="number">02</div>
                        <div class="name">@ViewLocalizer["about10"]</div>
                        <div class="desc-box">
                            @ViewLocalizer["about11"]
                        </div>
                    </div>

                    <div class="box"
                         data-aos="fade-up"
                         data-aos-duration="1600"
                         data-aos-easing="linear"
                    >
                        <div class="number">03</div>
                        <div class="name">@ViewLocalizer["about12"]</div>
                        <div class="desc-box">
                            @ViewLocalizer["about13"]
                           
                        </div>
                    </div>

                    <div class="box"
                         data-aos="fade-up"
                         data-aos-duration="1800"
                         data-aos-easing="linear"
                    >
                        <div class="number">04</div>
                        <div class="name">@ViewLocalizer["about14"]</div>
                        <div class="desc-box">
                            @ViewLocalizer["about15"]
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section
               data-aos="fade-up"
               data-aos-duration="1500"
               data-aos-easing="linear"
        >
            <div class="row max-width">
                <div class="col-lg-4 col-md-12 col-12"></div>
                <div class="col-lg-8 col-md-12 col-12">
                    <div class="title">@ViewLocalizer["about16"]</div>
                    <div class="desc">
                        @ViewLocalizer["about17"]
                        <br />
                        <br />
                        @ViewLocalizer["about18"]
                    </div>
                </div>
            </div>
        </section>

        <section class="max-width">
            <div class="footer footer-about">
                <div class="row">
                    <div class="col-lg-4 col-md-12 col-12"></div>
                    <div class="col-lg-8 col-md-12 col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="h2 primary-color">Work with us</div>
                            <div class="footer-about-pc">
                                <a href="#" class="link-redirect">
                                    <img src="./EgoImages/arrow.png" alt="" />
                                </a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="title">Reach us</div>
                                <div>Facebook</div>
                                <div>Behance</div>
                            </div>
                            <div>
                                <div class="title">Meet us</div>
                                <div>
                                    <a href="https://www.facebook.com/egoagency.vn">Facebook</a>
                                </div>
                                <div>
                                    <a href="https://www.behance.net/agencyego">Behance</a>
                                </div>
                            </div>
                            <div class="footer-about-mobile">
                                <a href="#" class="link-redirect">
                                    <img src="./EgoImages/arrow.png" alt="" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
@section Scripts{
    <script>
        $("#app-footer").hide();
    </script>
}