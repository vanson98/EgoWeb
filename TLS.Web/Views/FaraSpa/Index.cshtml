@using Microsoft.AspNetCore.Mvc.Localization
@using TLS.Web.Models
@inject IViewLocalizer ViewLocalizer
@section Headers{
    <link href="~/css/fara-spa.css" rel="stylesheet" />
    <title>Fara Spa - Ego</title>
}
<div class="spa-page">
    <section class="header max-width">
        <div class="row"
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
        >
            <div class="col-lg-5 col-md-12 col-12"></div>
            <div class="col-lg-7 col-md-12 col-12">
                <h1>Fara spa</h1>
            </div>
        </div>
        <div class="row"
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
        >
                <div class="col-lg-5 col-md-12 col-12 padding-left">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-6">
                        <div class="title">SERVICES</div>
                    </div>
                    <div class="col-lg-12 col-md-6 col-6">
                        <div class="desc">
                            <p>Branding</p>
                            <p>Campain</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-12 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-6">
                        <div class="title">DESCRIPTION</div>
                    </div>
                    <div class="col-lg-12 col-md-6 col-6">
                        <div class="desc">
                            <p>
                                    @ViewLocalizer["fara1"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <img src="~/EgoImages/spa/b1.png" alt=""
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
             />
    </section>

    <section>
        <div class="max-width">
            <img src="~/EgoImages/spa/b2.png" alt=""
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear" 
                 />
        </div>
    </section>

    <section>
        <div class="max-width">
            <div class="row">
                <div class="col-6">
                    <div class="left-side">
                        <img src="~/EgoImages/spa/a1.png" alt="" 
                              data-aos="fade-up"
                              data-aos-duration="500"
                              data-aos-easing="linear"
                 />
                    </div>
                </div>
                <div class="col-6">
                    <div class="right-side">
                        <img src="~/EgoImages/spa/a2.png" alt=""
                             data-aos="fade-up"
                             data-aos-duration="500"
                             data-aos-easing="linear" 
                             />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div>
            <img src="~/EgoImages/spa/b3.png" alt="" 
                data-aos="fade-up"
                data-aos-duration="500"
                data-aos-easing="linear" 
            />
        </div>
    </section>

    <section>
        <div class="max-width">
            <div class="landing-img">
                <img src="~/EgoImages/spa/landing.png" alt=""
                     data-aos="fade-up"
                     data-aos-duration="500"
                     data-aos-easing="linear"
                     />
            </div>
        </div>
    </section>

        <div class="max-width">
            @await Html.PartialAsync("_PageNavigation",new NavigationModel(){
        PreviousPagePath = "/du-an/tang-chuyen-doi-doanh-thu-nho-trien-khai-social-marketing-nganh-vat-lieu-xay-dung",
        NextPagePath = "/du-an/thiet-ke-nhan-dien-thuong-hieu-va-bao-bi-san-pham-nganh-my-pham"
            })
        </div>
</div>