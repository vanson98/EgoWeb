@{
    Layout = "_AuthenLayout";
}
@using TLS.ViewModels.Account
@model UserLoginModel
<div class="d-flex flex-column flex-root">
    <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(assets/media/illustrations/sketchy-1/14.png">
        <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
            <a href="../../demo8/dist/index.html" class="mb-12">
                <img alt="Logo" src="~/EgoImages/logo.png" class="h-40px" />
            </a>
            <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                <form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" asp-action="Login" asp-controller="Account" method="post">
                    <div class="text-center mb-10">
                        <h1 class="text-dark mb-3">Đăng nhập</h1>
                    </div>
                    <div asp-validation-summary="ModelOnly" style="color:red"></div>
                    <div class="fv-row mb-10">
                        <label class="form-label fs-6 fw-bolder text-dark" asp-for="Username"></label>
                        <input class="form-control form-control-lg form-control-solid" type="text" asp-for="Username" autocomplete="off" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="fv-row mb-10">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fw-bolder text-dark fs-6 mb-0" asp-for="Password"></label>
                        </div>
                        <input class="form-control form-control-lg form-control-solid" type="password" asp-for="Password" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-lg btn-primary w-100 mb-5">
                            <span class="indicator-label">Continue</span>
                            <span class="indicator-progress">
                                Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }