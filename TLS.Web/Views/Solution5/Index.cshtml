@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-element-bundle.min.js"></script>
    <script>
        const swiperEl = document.querySelector(".swiperSeries");
        Object.assign(swiperEl, {
            slidesPerView: 1,
            spaceBetween: 10,
            navigation: true,
            loop: true,
            breakpoints: {
                640: {
                    slidesPerView: 1,
                    spaceBetween: 10,
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 10,
                },
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 30,
                },
            },
        });
        swiperEl.initialize();
    </script>

