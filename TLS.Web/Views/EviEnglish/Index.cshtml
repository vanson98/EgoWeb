@using Microsoft.AspNetCore.Mvc.Localization
@using TLS.Web.Models
@inject IViewLocalizer ViewLocalizer
@section Headers{
    <link href="~/css/evi-english.css" rel="stylesheet" />
    <title>Evi English - Ego</title>
}
    <div class="evi-page">
        <section class="header max-width">
            <div class="row"
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
            >
                <div class="col-lg-5 col-md-12 col-12"></div>
                <div class="col-lg-7 col-md-12 col-12">
                    <h1>evi english</h1>
                </div>
            </div>
            <div class="row"
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
            >
                <div class="col-lg-5 col-md-12 col-12 padding-left">
                    <div class="row">
                        <div class="col-lg-12 col-md-6 col-6">
                            <div class="title">SERVICES</div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-6">
                            <div class="desc">
                                <p>Branding</p>
                                <p>Adversing</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7 col-md-12 col-12">
                    <div class="row">
                        <div class="col-lg-12 col-md-6 col-6">
                            <div class="title">DESCRIPTION</div>
                        </div>
                        <div class="col-lg-12 col-md-6 col-6">
                            <div class="desc">
                                <p>
                                    @ViewLocalizer["evi1"]
                                    
                                    
                                    
                                    <br />
                                    <br />
                                    @ViewLocalizer["evi2"]
                                    
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="banner">
            <img 
                 src="~/EgoImages/evi/b1.png" 
                 alt="" 
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear" 
             />
            <div 
                 class="text" 
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear"
            >
                @ViewLocalizer["evi3"]
                
                
            </div>
        </section>

        <section>
            <div class="max-width">
                <img src="~/EgoImages/evi/b2.png" alt="" 
                data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear" />
            </div>
        </section>

        <section>
            <div class="max-width">
                <img src="~/EgoImages/evi/b3.png" alt=""
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear"
                 />
            </div>
        </section>

        <section>
            <div class="max-width">
                <img src="~/EgoImages/evi/b4.png" alt=""
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear" 
                 />
            </div>
        </section>

        <section>
            <div class="max-width">
                <div class="row" 
                    data-aos="fade-up"
                    data-aos-duration="500"
                    data-aos-easing="linear"
                >
                    <div class="col-4">
                        <img src="~/EgoImages/evi/t1.png" alt="" />
                    </div>
                    <div class="col-4">
                        <img src="~/EgoImages/evi/t2.png" alt="" />
                    </div>
                    <div class="col-4">
                        <img src="~/EgoImages/evi/t3.png" alt="" />
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="max-width post-evi" 
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
            >
                <img src="~/EgoImages/evi/post_1.png" alt="" />
            </div>
        </section>

        <section>
            <div class="max-width post-evi"
             data-aos="fade-up"
             data-aos-duration="500"
             data-aos-easing="linear"
            >
                <img src="~/EgoImages/evi/post_2.png" alt="" />
            </div>
        </section>

        <section class="max-width">
            <div class="wrapper-down-page">
                <div class="text"
                 data-aos="fade-up"
                 data-aos-duration="500"
                 data-aos-easing="linear"
                >
                    @ViewLocalizer["evi4"]
                    
                    
                </div>
                <div class="row">
                    <div class="col-5 d-flex flex-column justify-content-center"
                     data-aos="fade-up"
                     data-aos-duration="500"
                     data-aos-easing="linear"
                    >
                        <div class="box">
                            <div class="title">@ViewLocalizer["evi5"] </div>
                            <div class="number">135 <span class="hide-mobile"> @ViewLocalizer["evi6"]</span></div>
                        </div>
                        <div class="box">
                            <div class="title"> @ViewLocalizer["evi7"]</div>
                            <div class="number">30 <span class="hide-mobile"> @ViewLocalizer["evi8"]</span></div>
                        </div>
                        <div class="box">
                            <div class="title"> @ViewLocalizer["evi9"]</div>
                            <div class="number">25 <span class="hide-mobile"> @ViewLocalizer["evi10"]</span></div>
                        </div>
                    </div>
                    <div class="col-7"
                     data-aos="fade-up"
                     data-aos-duration="500"
                     data-aos-easing="linear"
                    >
                        <div class="row gap-5">
                            <div class="col-12">
                                <img src="~/EgoImages/evi/f1.png" alt="" />
                            </div>
                            <div class="col-12">
                                <img src="~/EgoImages/evi/f2.png" alt="" />
                            </div>
                            <div class="col-12">
                                <img src="~/EgoImages/evi/f3.png" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="max-width">
            @await Html.PartialAsync("_PageNavigation",new NavigationModel(){
        PreviousPagePath = "/du-an/thiet-ke-bo-nhan-dien-thuong-hieu-giao-duc-tieng-anh",
        NextPagePath = "/du-an/tang-chuyen-doi-doanh-thu-nho-trien-khai-marketing-da-kenh-nganh-thoi-trang"
            })
        </div>
    </div>